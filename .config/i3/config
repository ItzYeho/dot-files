# i3 config file (v4)

# Set-up WinKey (Super) to be the modifier key.
set $mod Mod4

# Allows use of the mouse to resize and move windows
floating_modifier $mod

# Title font
font pango:Noto Sans Bold 10

# Gaps / window border settings
gaps inner 5
default_border none
default_floating_border normal 0

# Allign titles to the center
title_align center

# Hide borders when only one window is present
hide_edge_borders smart

# Prevent auto focus
focus_follows_mouse no

# Prevent mouse teleporting to the selected workspace
mouse_warping none

# Show urgency hint for a bit before dismissing
force_display_urgency_hint 500 ms

# Enable going back and forth with the same keybind (workspaces)
workspace_auto_back_and_forth yes

# Set a minimum size for floating windows
floating_minimum_size 120 x 80

############
# Includes #
############

include workspaces.conf
include services.conf
include keybinds.conf
include colors.conf

bar {}
